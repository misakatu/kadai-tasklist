<% if logged_in? %>

<h1>タスク一覧</h1>

<% if @tasks.any? %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>タスク内容</th>
        <th>タスク削除</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
          <td>        
            <div>
              <% if current_user == task.user %>
                <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate @tasks %>
  </div>
<% end %>

<%= link_to "タスクを新規作成する", new_task_path, class: "btn btn-primary" %>

<% else %>
<div class="center jumbotron">
  <div class="text-center">
    <h1 class="mt-3">Welcome to the Tasklist application</h1>
    <div class="mt-5">
    <%= link_to 'Sign up now!', signup_path, class: 'mt-5 btn btn-lg btn-primary' %>
    </div>
  </div>
</div>
<% end %>